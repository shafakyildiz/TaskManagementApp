@model List<TaskManagementApp.Models.Task>

<h2>Task List</h2>
<a href="/tasks/create">
    <button>Create Task</button>
</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Is Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@(task.IsCompleted ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>

<style>
    button {
        border: none;
        border-radius: 10%;
        background-color: #0dcaf0;
        padding: 8px;
    }
    
</style>